<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="4dp"
        android:background="@drawable/shape_item_sitter_bg"
        android:layout_height="132dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            tools:src="@drawable/sitter_1"
            android:layout_marginStart="27dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <TextView
            android:id="@+id/textPrice"
            android:textColor="@color/black"
            android:text="$3/hr"
            android:textSize="10sp"
            android:fontFamily="@font/antic"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="@id/imageAvatar"
            app:layout_constraintEnd_toEndOf="@id/imageAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imageAvatar"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <TextView
            tools:text="John"
            android:layout_marginStart="24dp"
            android:textSize="25sp"
            android:fontFamily="@font/baloo"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            tools:text="2.5 miles"
            android:fontFamily="@font/antic"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textName"
            android:textColor="#000000"
            android:id="@+id/textDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            tools:text="3.8 stars, 240 reviews"
            android:layout_marginStart="24dp"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textDistance"
            android:id="@+id/textStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:fontFamily="@font/antic"/>

    <ImageView
            android:id="@+id/imageStart1"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textStar"
            android:src="@drawable/star_gold"
            android:layout_marginTop="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <ImageView
            android:id="@+id/imageStart2"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/imageStart1"
            app:layout_constraintTop_toBottomOf="@id/textStar"
            android:src="@drawable/star_gold"
            android:layout_marginTop="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <ImageView
            android:id="@+id/imageStart3"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/imageStart2"
            app:layout_constraintTop_toBottomOf="@id/textStar"
            android:src="@drawable/star_gold"
            android:layout_marginTop="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <ImageView
            android:id="@+id/imageStart4"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/imageStart3"
            app:layout_constraintTop_toBottomOf="@id/textStar"
            android:src="@drawable/star_silver"
            android:layout_marginTop="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <ImageView
            android:id="@+id/imageStart5"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/imageStart4"
            app:layout_constraintTop_toBottomOf="@id/textStar"
            android:src="@drawable/star_silver"
            android:layout_marginTop="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>