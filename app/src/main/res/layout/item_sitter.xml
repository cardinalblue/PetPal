<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/shape_item_sitter_bg"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:src="@color/color_sub"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <TextView
            android:text="John"
            android:paddingStart="8dp"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="2.5 miles"
            android:paddingStart="8dp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textName"
            android:id="@+id/textDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="3.8 starts, 240 reviews"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textDistance"
            android:id="@+id/textStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>